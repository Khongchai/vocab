{
  "name": "vocab",
  "scopeName": "text.vocab",
  "patterns": [
    {
      "include": "#date"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "match": "#.*",
          "name": "comment.line.number-sign.vocab"
        }
      ]
    },
    "date": {
      "patterns": [
        {
          "comment": "A date of the pattern dd/mm/y+ demarcates a new section.",
          "match": "(0[1-9]|1[0-9]|2[0-9]|3[0-1])/(0[1-9]|1[0-9]|2[0-9]|3[0-1])/[1-9]([0-9]+)?",
          "name": "variable.language.this.vocab"
        },
        {
          "include": "#new-words-or-phrases"
        },
        {
          "include": "#reviewed-words-or-phrases"
        },
        {
          "include": "#sentences"
        }
      ]
    },
    "new-words-or-phrases": {
      "begin": "(?<!>)>(?!>)",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.array.begin.vocab"
        }
      },
      "end": "$",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.array.end.vocab"
        }
      },
      "patterns": [
        {
          "match": ",",
          "name": "punctuation.separator.array.vocab"
        },
        {
          "comment": "Not a comma, not a space, unless it is a part of a word.",
          "match": "(?<=, |> ) ?[^,]+?(?=,|$)",
          "name": "variable.other.constant.vocab"
        }
      ]
    },
    "reviewed-words-or-phrases": {
      "begin": "(?<!>)>>(?!>)",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.array.begin.vocab"
        }
      },
      "end": "$",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.array.end.vocab"
        }
      },
      "patterns": [
        {
          "match": ",",
          "name": "punctuation.separator.array.vocab"
        },
        {
          "match": "(?<=, |> ) ?[^,]+?(?=,|$)",
          "name": "storage.type.vocab"
        }
      ]
    },
    "sentences": {
      "patterns": [
        {
          "comment": "This matches everything, so it should be at the very bottom",
          "match": ".*",
          "name": "string.quoted.other"
        }
      ]
    }
  }
}
